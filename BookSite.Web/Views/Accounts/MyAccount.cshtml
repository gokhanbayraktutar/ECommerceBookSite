@model BookSite.Web.Models.HomeVM
@using BookSite.Web.Methods
@{

    Layout = "~/Views/Shared/_Layout.cshtml";


    BookSite.Data.Context.DataContext db = new BookSite.Data.Context.DataContext();
    var siteConstant = db.SiteConstants.FirstOrDefault();
    string pageHeader = "Hesabım ";
    ViewBag.Title = SeoHelper.HeaderWriter(siteConstant.Header, pageHeader);


}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">AnaSayfa</a></li>
                    <li class="breadcrumb-item active">Hesabım</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="page-section inner-page-sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="col-lg-9 col-12 mt--30 mt-lg--0">


                    <div class="myaccount-content">
                        <h3>Hesap Bilgileri</h3>
                        <div class="account-details-form">
                            <form method="POST" action="/hesabım" enctype="multipart/form-data" role="form">
                                <div class="row">
                                    <div class="col-lg-6 col-12  mb--30">
                                        <input class="mb-0 form-control" type="text" name="Name" value="@Model.User.Name"
                                               placeholder="Adınızı giriniz" required>
                                    </div>
                                    <div class="col-lg-6 col-12  mb--30">
                                        <input class="mb-0 form-control" type="text" name="Lastname"
                                               placeholder="Soyadınızı giriniz" required value="@Model.User.Lastname">
                                    </div>

                                    <div class="col-lg-6 col-12  mb--30">
                                        <input class="mb-0 form-control" type="password" name="Password" placeholder="Şifre giriniz " required>
                                    </div>
                                    <div class="col-lg-6 col-12  mb--30">
                                        <input class="mb-0 form-control" type="password" name="RePassword" placeholder="Tekrar şifre giriniz" required>
                                    </div>
                                    <div class="col-lg-6 col-12  mb--30">
                                        <input class="mb-0 form-control" type="email" name="Email" placeholder="Email adresini giriniz" value="@Model.User.Email" required>
                                    </div>
                                    <div class="col-lg-6 col-12  mb--30">
                                        <input class="mb-0 form-control" type="text" name="Phone"
                                               placeholder="Telefon no giriniz" value="@Model.User.Phone">
                                    </div>
                                    <input hidden value="@Model.User.Id" />
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger" role="alert" style="width:300px">
                                            @ViewBag.Error
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }
                                    <div class="col-12">
                                        <button class="btn btn--primary" type="submit">Güncelle</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>


