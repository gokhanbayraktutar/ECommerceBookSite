@model BookSite.Data.Entities.User
@using BookSite.Web.Methods
@{
    Layout = "~/Views/Shared/_Layout.cshtml";


    BookSite.Data.Context.DataContext db = new BookSite.Data.Context.DataContext();

    var siteConstant = db.SiteConstants.FirstOrDefault();
    string pageHeader = "Kaydol";
    ViewBag.Title = SeoHelper.HeaderWriter(siteConstant.Header, pageHeader);
}


<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0" style="margin: auto; background-color: #dedede;">
                <!-- Login Form s-->
                @if (Model == null)
                {
                    <form method="POST" action="/kaydol" enctype="multipart/form-data" role="form">


                        <div class="login-form">
                            <h4 class="login-title">Kaydol</h4>

                            <div class="row">
                                <div class="col-lg-6 mb--20">
                                    <label for="email">Ad:</label>
                                    <input class="col-md-12 col-10 mb-0 form-control" type="text" name="Name"
                                           placeholder="Adınızı giriniz" required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="email">Soyad:</label>
                                    <input class="col-md-12 col-10 mb-0 form-control" type="text" name="Lastname"
                                           placeholder="Soyadınızı giriniz" required>
                                </div>

                                <div class="col-lg-6 mb--20">
                                    <label for="password">Şifre:</label>
                                    <input class="col-md-12 col-10 mb-0 form-control" type="password" name="Password" placeholder="Şifre giriniz " required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="password">Tekrar Şifre:</label>
                                    <input class="col-md-12 col-10 mb-0 form-control" type="password" name="RePassword" placeholder="Tekrar şifre giriniz" required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="email">Email:</label>
                                    <input class="col-md-12 col-10 mb-0 form-control" type="email" name="Email" placeholder="Email adresini giriniz" required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="email">Telefon:</label>
                                    <input class="col-md-12 col-10 mb-0 form-control" type="text" name="Phone"
                                           placeholder="Telefon no giriniz">
                                </div>

                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger" role="alert" style="width:300px">
                                        @ViewBag.Error
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                }



                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Kaydol</button>
                                </div>
                            </div>
                        </div>

                    </form>
                }
                else
                {
                    <form method="POST" action="/kaydol" enctype="multipart/form-data" role="form">

                        <div class="login-form">
                            <h4 class="login-title">Kaydol</h4>

                            <div class="row">
                                <div class="col-lg-6 mb--20">
                                    <label for="email">Ad:</label>
                                    <input class="mb-0 form-control" type="text" name="Name" value="@Model.Name"
                                           placeholder="Adınızı giriniz" required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="email">Soyad:</label>
                                    <input class="mb-0 form-control" type="text" name="Lastname"
                                           placeholder="Soyadınızı giriniz" required value="@Model.Lastname">
                                </div>
                                <div class="col-12 mb--20">
                                    <label for="email">Email:</label>
                                    <input class="col-md-8 col-8 mb-0 form-control" type="email" name="Email" placeholder="Email adresini giriniz" value="@Model.Email" required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="password">Şifre:</label>
                                    <input class="mb-0 form-control" type="password" name="Password" placeholder="Şifre giriniz " required>
                                </div>
                                <div class="col-lg-6 mb--20">
                                    <label for="password">Tekrar Şifre:</label>
                                    <input class="mb-0 form-control" type="password" name="RePassword" placeholder="Tekrar şifre giriniz" required>
                                </div>
                                <div class="col-md-12 col-12 mb--15">
                                    <label for="email">Telefon:</label>
                                    <input class="col-md-8 col-8 mb-0 form-control" type="text" name="Phone"
                                           placeholder="Telefon no giriniz" value="@Model.Phone">
                                </div>

                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger" role="alert" style="width:300px">
                                        @ViewBag.Error
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                }

                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Kaydol</button>
                                </div>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</main>
