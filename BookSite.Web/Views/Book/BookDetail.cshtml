<script>
    function AddComment(item) {
        var data = new Object();
        data.BookId = $("#BookId").val();
        data.UserId = $("#UserId").val();
        data.Comment = $("#Comment").val();
        data.StarCount = $('#star').val();
        if (data.UserId == "") {
            $("#alertuser").show();
        }
        else {
            if (data.Comment == "") {
                $("#alert").show();
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/kitapyorum",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $("#alert").hide();
                        alert("Yorum Eklendi.")
                    },

                    error: function (data) {

                        swal.fire({
                            title: "Başarısız",
                            text: "Eklenemedi.",
                            icon: "error"
                        }).then(function () {
                            location.reload();
                        })
                    }
                });
            }
        }

    }
</script>






